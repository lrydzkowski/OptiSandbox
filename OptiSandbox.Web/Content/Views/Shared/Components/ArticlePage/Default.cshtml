@model IPageViewModel<ArticlePage>

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <a href="@Url.ContentUrl(Model.CurrentContent.ContentLink)">
                <h2 class="card-title">@Html.PropertyFor(viewModel => viewModel.CurrentContent.Title)</h2>
                <p class="article-date">@Html.PropertyFor(viewModel => viewModel.CurrentContent.PublishedAt, TemplateNames.OnlyDate)</p>
            </a>
        </div>
    </div>
</div>

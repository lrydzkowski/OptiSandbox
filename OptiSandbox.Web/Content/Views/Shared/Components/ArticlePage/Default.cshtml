@model IPageViewModel<ICurrentPageViewModel<ArticlePage>>

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <a href="@Url.ContentUrl(Model.CurrentPageViewModel.CurrentPage.ContentLink)">
                <h2 class="card-title">@Html.PropertyFor(viewModel => viewModel.CurrentPageViewModel.CurrentPage.Title)</h2>
                <p class="article-date">@Html.PropertyFor(viewModel => viewModel.CurrentPageViewModel.CurrentPage.PublishedAt, TemplateNames.OnlyDate)</p>
            </a>
        </div>
    </div>
</div>

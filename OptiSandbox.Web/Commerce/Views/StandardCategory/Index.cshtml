@using OptiSandbox.Web.Commerce.Models
@model OptiSandbox.Web.Commerce.Models.ViewModels.StandardCategoryViewModel

<header class="text-center mb-5">
    <h1 class="display-4">@Html.PropertyFor(viewModel => viewModel.CurrentContent.Title)</h1>
    <p class="lead">@Html.PropertyFor(viewModel => viewModel.CurrentContent.Subtitle)</p>
</header>

<div class="col-lg-9">
    <div class="row">
        @foreach (CategoryProduct product in Model.Products)
        {
            <div class="col-md-4 mb-4">
                <div class="card product-card h-100">
                    <img
                        src="@product.ImageUrl"
                        class="card-img-top product-img"
                        alt="@product.Name"
                    />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted">@product.Type</p>
                        <p class="card-text product-desc">@product.ShortDescription</p>
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="price">@(product.Price?.ToString("C") ?? "-")</span>
                                <a href="@product.ProductUrl" class="btn btn-outline-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>